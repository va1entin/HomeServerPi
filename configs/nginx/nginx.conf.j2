http {
    include mime.types;

    server {
        listen 80;

        location / {
        }

        location /media/ {
            add_before_body /nginx-autoindex-theme/header.html;
            add_after_body /nginx-autoindex-theme/footer.html;

            alias {{ container_content_dir }}/;

            autoindex_exact_size off;
            autoindex on;
        }

        location /media {
            return 301 /media/;
        }
    }
}

events {}
